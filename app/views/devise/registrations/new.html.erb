<div class="fieldBox">
<h2 class="title">S'inscrire</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="fieldSessions">
    <%= f.label :prénom %><br />
    <%= f.text_field :firstname %>
  </div>

    <div class="fieldSessions">
    <%= f.label :nom %><br />
    <%= f.text_field :lastname %>
  </div>

  <div class="fieldSessions">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="fieldSessions">
    <%= f.label :Mot_de_passe %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> charactères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="fieldSessions">
    <%= f.label :confirmer_mot_de_passe %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<div class="cre">
  <h3 class="title">Vous êtes un chargé de Relation Entreprise ou conseiller ?</h3>
  
<div class="fieldcheckbox">
     <%= f.label :demandecre %><br>
    <%= f.select :demandecre, ['CRE', 'Conseiller']%>
</div>

<div class="fieldSessions">
    <%= f.label :entreprise %><br/>
    <%= f.text_field :entreprise %>
</div>
<div class="fieldSessions">
    <%= f.label :adresse %><br />
    <%= f.text_field :adress %>
</div>
</div>
<div class="fieldcheckbox">
    <%= f.check_box :rgpd %>
    <%= f.label :rg, '*Champs obligatoire. J\'accepte que les données saisies soient conservées dans le cadre d\'utilisations sur le site AppiJob.' %>
</div>

  <div class="actions">
    <%= f.submit "S'inscrire" %>
  </div>
<% end %>
<div class="links">
<%= render "devise/shared/links" %>
</div>
</div>