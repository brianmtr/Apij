<h1>Avesnes-Sur-Helpe: Agriculture</h1>

 <div class="containerCard">

 <% @offres.each do |offre| %>
 <% if offre.commune === 'Avesnes-Sur-Helpe' && offre.domaine === 'Agriculture et pêche' %>
<div class="card">
    <h5><%= offre.poste %></h5><small class="created"><%= offre.created_at %></small>
    <br>
    <p><%= offre.contrat %> </p>
    <p><%= offre.salaire %> € par mois</p>
    <p><%= offre.email %></p>
    <div class="scroller">
    <small><%= offre.description %></small>
    </div>
    <br>
  <p class="linkOffre">
    <%= link_to 'Voir', offre %>
    <%= link_to 'Editer', edit_offre_path(offre) %>
    <%= link_to 'Supprimer', offre, method: :delete, data: { confirm: 'Are you sure?' } %>
    <a href="mailto:test@test.fr">POSTULER</a>
    </p>
    
  </div>  
    <% end %>
 <% end %>
</div>