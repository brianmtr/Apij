<p id="notice"><%= notice %></p>

<h1 class="h2Title"><span class="colorLetters">Évén</span>ements</h1>

    <% if user_signed_in? && current_user.conseiller? || current_user.cre? %>
        <div class="newEvent">
        <% if @events.limit(1) %>
            <%= link_to 'Créer un événement', new_event_path %>
        <% elsif %>
            <p class="warningCreateEvent">Veuillez supprimer l'ancien événement avant d'en créer un nouveau ! 😁 </p>
        <% end %>
        </div>
    <% end %>
<br>
<% @events.each do |event| %>
    <%= render 'status', event: event %>
<% end %>
<br>

