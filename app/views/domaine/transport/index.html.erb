  <div class="accordion-item">
    <h2 class="accordion-header" id="headingHeight">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHeight" aria-expanded="false" aria-controls="collapseHeight">Agent / Agente de piste d'aéroport</button>
