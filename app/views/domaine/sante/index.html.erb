<div class="accordion-item">
  <h2 class="accordion-header" id="headingSeventytwo">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSeventytwo" aria-expanded="false" aria-controls="collapseSeventytwo">Sage-femme</button>
