  <h2 class="accordion-header" id="headingFourtyheight">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFourtyheight" aria-expanded="false" aria-controls="collapseFourtyheight">
        Tailleur / Tailleuse de pierre
    </button>
