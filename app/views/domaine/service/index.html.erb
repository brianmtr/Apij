  <h2 class="accordion-header" id="headingThirtyfive">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThirtyfive" aria-expanded="false" aria-controls="collapseThirtyfive">Ergonome</button>
    </h5>
    <div id="collapseThirtyfive" class="accordion-collapse collapse" aria-labelledby="headingThirtyfive" data-bs-parent="#accordionExample">
      <div class="accordion-body">
