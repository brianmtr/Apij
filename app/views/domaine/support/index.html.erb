  <div class="accordion-item">
    <h2 class="accordion-header" id="headingHeighteen">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHeighteen" aria-expanded="false" aria-controls="collapseHeighteen">Coach professionnel</button>
