<% if current_user.conseiller? %>

<h1><span class="colorLetters">Pu</span>blic</h1>

<div class="PublicContainer">
<h2>Entretien à prévoir</h2>
    <ul class="list-group">
    
     <% @users.each do |user| %>
      <% if user.cre? || user.conseiller? %>

      <% elsif %>
    <% if user.status? %>
      <% elsif %>
        <li class="list-group-item">
            <p><%= user.firstname %></p> 
            <p><%= user.lastname %></p> 
            <p><%= user.email %></p>
            <p><%= user.created_at %></p>
            <div class="linkPublic">
            <%= link_to 'Entretien effectué', treated_user_path(user.id), method: :put, data: { confirm: 'Êtes vous certain ?' } %>
            </div>
        </li>
    <% end %>
    <% end %>
    <% end %>
    </ul>
</div>

    <div class="PublicContainer">
    <h2>Public inscrit avec entretien</h2>
    <ul class="list-group">
    
    <% @form_jeunes.each do |form_jeune| %>
        <li class="list-group-item">
            <p><%= form_jeune.firstname %></p> 
            <p><%= form_jeune.lastname %></p> 
            <p><%= form_jeune.mail %></p>
        <div class="linkPublicTwo">
            <%= link_to 'Voir', form_jeune %>
            <%= link_to 'Modifier', edit_form_jeune_path(form_jeune) %>
            <%= link_to 'Supprimer', form_jeune, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        </li>
    <% end %>
    </ul>
</div>

<% elsif %>
